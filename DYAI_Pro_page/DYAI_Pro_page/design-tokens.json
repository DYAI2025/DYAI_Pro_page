{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "DYAI Design Tokens",
  "description": "Design-Tokens für die DYAI-Website und Instafile-Landingpage",
  "version": "1.0.0",
  "colors": {
    "brand": {
      "primary": {
        "value": "#0D1B2A",
        "description": "Deep Space Blue - Hauptfarbe für Headlines, Texte",
        "usage": "Headlines, primärer Text, Navigation"
      },
      "secondary": {
        "value": "#415A77",
        "description": "Structure Grey - Sekundärfarbe für Fließtext",
        "usage": "Body-Text, sekundäre Elemente"
      },
      "accent": {
        "value": "#FF6F61",
        "description": "Living Coral - Akzentfarbe für CTAs, Links",
        "usage": "Call-to-Actions, interaktive Elemente, Hover-States"
      },
      "background": {
        "light": {
          "value": "#FFFFFF",
          "description": "Weiß - Cards, Formulare"
        },
        "subtle": {
          "value": "#F0F4F8",
          "description": "Future White - Hintergrund, subtile Flächen"
        }
      }
    },
    "instafile": {
      "primary": {
        "value": "#6366F1",
        "description": "Indigo - Instafile primäre Brand-Farbe",
        "usage": "Instafile-spezifische Elemente, Buttons"
      },
      "gradient": {
        "start": "#8B5CF6",
        "end": "#6366F1",
        "description": "Purple-Indigo Gradient für Instafile Hero"
      },
      "icon": {
        "value": "#FCD34D",
        "description": "Lightning Yellow - Icon-Akzent"
      }
    },
    "semantic": {
      "success": {
        "value": "#10B981",
        "description": "Grün für Erfolgs-Meldungen"
      },
      "error": {
        "value": "#EF4444",
        "description": "Rot für Fehler-Meldungen"
      },
      "warning": {
        "value": "#F59E0B",
        "description": "Orange für Warnungen"
      },
      "info": {
        "value": "#3B82F6",
        "description": "Blau für Info-Hinweise"
      }
    }
  },
  "typography": {
    "fontFamilies": {
      "sans": {
        "value": "'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "description": "Sans-Serif für UI-Elemente, Navigation, Headlines"
      },
      "serif": {
        "value": "'Lora', Georgia, serif",
        "description": "Serif für Fließtext, längere Inhalte"
      },
      "display": {
        "value": "'Orbitron', 'Poppins', sans-serif",
        "description": "Display-Font für DYAI-Logo, spezielle Akzente"
      },
      "mono": {
        "value": "'Fira Code', 'Courier New', monospace",
        "description": "Monospace für Code-Beispiele"
      }
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeights": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeights": {
      "tight": "1.25",
      "snug": "1.375",
      "normal": "1.5",
      "relaxed": "1.625",
      "loose": "2"
    }
  },
  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem",
    "28": "7rem",
    "32": "8rem"
  },
  "borderRadius": {
    "none": "0",
    "sm": "0.125rem",
    "default": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.5rem",
    "full": "9999px"
  },
  "shadows": {
    "subtle": {
      "value": "0 4px 12px rgba(13, 27, 42, 0.05), 0 2px 4px rgba(13, 27, 42, 0.05)",
      "description": "Sehr dezente Schatten für Cards"
    },
    "medium": {
      "value": "0 6px 20px rgba(13, 27, 42, 0.08), 0 3px 6px rgba(13, 27, 42, 0.06)",
      "description": "Mittlere Schatten für Hover-States"
    },
    "strong": {
      "value": "0 10px 25px rgba(13, 27, 42, 0.1), 0 5px 10px rgba(13, 27, 42, 0.08)",
      "description": "Stärkere Schatten für Modals, Overlays"
    },
    "xl": {
      "value": "0 20px 40px rgba(13, 27, 42, 0.15), 0 8px 16px rgba(13, 27, 42, 0.1)",
      "description": "Maximale Schatten für wichtige Elemente"
    }
  },
  "transitions": {
    "fast": "150ms",
    "base": "300ms",
    "slow": "500ms",
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "inOut": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "zIndex": {
    "base": "0",
    "dropdown": "10",
    "sticky": "50",
    "fixed": "100",
    "modal": "1000",
    "popover": "1100",
    "tooltip": "1200"
  }
}
